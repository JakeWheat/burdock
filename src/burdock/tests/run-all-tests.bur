
#|

read all bur and rst files in built-ins
burdock test src except this one
docs
examples
src/packages/ffitypes-test
website2

|#

import _internals as _internals

include filesystem
import from lists:
  map,
  filter,
  not-elem
end

include testing

fun my-ld(dir):
  glob(dir + "**/*.bur") + glob(dir + "**/*.rst")
end

srcs = (my-ld("src/burdock/built-ins")
       ^ filter(not-elem(_,[list:"./src/burdock/built-ins/_internals.bur", "./src/burdock/built-ins/globals.bur"]), _))
       + (my-ld("src/burdock/tests")
       ^ filter(not-elem(_,[list:"./src/burdock/tests/run-all-tests.bur",
                            "./src/burdock/tests/run-all-tests-additional.bur"]), _))
       + my-ld("docs")
       + my-ld("website2")
       + [list: "examples/load-csv-python.bur"]
       + my-ld("src/packages/python-ffi")

#shadow srcs = [list: "src/burdock/tests/concurrency.bur"]

ts = run-tests-with-opts(default-test-opts.{test-sources:map(file-test(_), srcs),
                                       show-progress-log:true,
                                       auto-print-results:true,
                                       hide-successes:true
                                      })

when has-test-failures(ts):
  _internals.sysexit(1)
end
