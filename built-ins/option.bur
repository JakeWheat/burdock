
provide:
  some,
  none,
  is-Option,
  is-some,
  is-none,
  and-then,
  or-else,

  _casepattern-some,
  _casepattern-none,
  _typeinfo-Option
end

include _internals

fun and-then<o>(a :: Option<o>, f):
  cases a:
    | some(a1) => some(f(a1))
    | none => none
  end
end

fun or-else<o>(a :: Option<o>, v):
  cases a:
    | some(a1) => a1
    | none => v
  end
end
